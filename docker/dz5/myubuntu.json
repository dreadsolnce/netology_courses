{
  "variables": {
    "TOKEN": "",
    "ZONE": "ru-central1-a",
    "FOLDER_ID": "",
    "aws_secret_key": ""
  },
  "builders": [
        {
            "type": "yandex",
            "token": "{{user `TOKEN`}}",
            "folder_id": "{{user `FOLDER_ID`}}",
            "zone": "{{ user `ZONE` }}",
            "image_name": "ubuntu-2404-docker",
            "image_description": "my custom ubuntu with docker",
            "source_image_family": "ubuntu-2404-lts",
            "use_ipv4_nat": true,
            "disk_type": "network-hdd",
            "ssh_username": "ubuntu"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "echo 'hello from packer'",
                "sudo apt-get update",
                "sudo apt-get install htop tmux net-tools python3-docker -y",
                "curl -fsSL https://get.docker.com -o get-docker.sh",
                "sudo sh get-docker.sh",
                "sudo usermod -a -G docker ubuntu",
                "echo 'ssh-rsa  u0_a331@localhost' | tee -a /home/ubuntu/.ssh/authorized_keys",
                "echo 'ssh-rsa  u0_a37@localhost' | tee -a /home/ubuntu/.ssh/authorized_keys",
                "echo 'ssh-rsa  kvl@VPS47612.ipserver.su' | tee -a /home/ubuntu/.ssh/authorized_keys"
            ]
        }
    ]
}

